// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model Users {
  id           Int           @id @default(autoincrement())
  name         String
  email        String
  password     String
  refreshToken String?
  budgets  Budgets[]
  savings Savings[]
  TrackerData  TrackerData[]
}

model Types {
  id        Int      @id @default(autoincrement())
  name      String
  categories Categories[]
  budgets  Budgets[]
  savings Savings[]
  TrackerData  TrackerData[]
}

model Categories {
  id        Int      @id @default(autoincrement())
  type     Types    @relation(fields: [typeId], references: [id])
  typeId   Int
  name      String
  budgets  Budgets[]
  savings Savings[]
  TrackerData  TrackerData[]
}

model Budgets {
  id        Int      @id @default(autoincrement())
  name      String
  nominal   Int
  spent     Int
  type     Types    @relation(fields: [typeId], references: [id])
  typeId   Int
  type_name  String
  category Categories    @relation(fields: [categoryId], references: [id])
  categoryId  Int
  category_name  String
  user     Users    @relation(fields: [userId], references: [id])
  userId   Int
}

model Savings {
  id        Int      @id @default(autoincrement())
  name      String
  nominal   Int
  saved     Int
  type     Types    @relation(fields: [typeId], references: [id])
  typeId   Int
  type_name  String
  category Categories    @relation(fields: [categoryId], references: [id])
  categoryId  Int
  category_name  String
  user     Users    @relation(fields: [userId], references: [id])
  userId   Int
}

model TrackerData {
  id       Int      @id @default(autoincrement())
  date     DateTime
  name     String
  nominal  Int
  type     Types    @relation(fields: [typeId], references: [id])
  typeId   Int
  type_name  String
  category Categories    @relation(fields: [categoryId], references: [id])
  categoryId  Int
  category_name  String
  user     Users    @relation(fields: [userId], references: [id])
  userId   Int
}



